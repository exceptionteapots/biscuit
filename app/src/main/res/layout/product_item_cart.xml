<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        app:rippleColor="@color/dark_red"
        app:cardBackgroundColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:padding="13dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/product_img2"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/product_img_description" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/product_button2"
                app:icon="@drawable/ic_remove_from_cart"
                android:textSize="9sp"
                android:paddingHorizontal="10dp"
                android:text="@string/remove_from_cart"
                android:layout_alignParentStart="true"
                android:layout_below="@id/product_img2"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/product_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/product_img2"
                android:layout_alignParentTop="true"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/product_description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name2"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/product_img2"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_below="@+id/product_description2"
                android:layout_toEndOf="@+id/product_img2"
                android:layout_marginTop="10dp"/>


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>